@page
@model TqPerformanceEvaluationHr.Web.Pages.IndexModel

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="fw-bold text-primary display-5">Dashboard</h1>
            <p class="text-muted">Performance evaluation system summary</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Modelos de Evaluación -->
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="card border-0 shadow-sm rounded-3 h-100 overflow-hidden">
                <div class="card-body p-0">
                    <div class="d-flex h-100">
                        <div class="bg-primary text-white d-flex align-items-center justify-content-center px-4">
                            <i class="bi bi-file-earmark-text fs-1"></i>
                        </div>
                        <div class="p-3">
                            <h6 class="text-muted mb-1">Evaluation Models</h6>
                            <h2 class="fw-bold mb-0">@Model.TotalEvaluationModels</h2>
                            <a href="/EvaluationModels/Index" class="stretched-link text-decoration-none small">View details →</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Empleados -->
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="card border-0 shadow-sm rounded-3 h-100 overflow-hidden">
                <div class="card-body p-0">
                    <div class="d-flex h-100">
                        <div class="bg-success text-white d-flex align-items-center justify-content-center px-4">
                            <i class="bi bi-people fs-1"></i>
                        </div>
                        <div class="p-3">
                            <h6 class="text-muted mb-1">Employees</h6>
                            <h2 class="fw-bold mb-0">@Model.TotalEmployees</h2>
                            <a href="/Employees/Index" class="stretched-link text-decoration-none small">View details →</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Posiciones -->
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="card border-0 shadow-sm rounded-3 h-100 overflow-hidden">
                <div class="card-body p-0">
                    <div class="d-flex h-100">
                        <div class="bg-danger text-white d-flex align-items-center justify-content-center px-4">
                            <i class="bi bi-briefcase fs-1"></i>
                        </div>
                        <div class="p-3">
                            <h6 class="text-muted mb-1">Positions</h6>
                            <h2 class="fw-bold mb-0">@Model.TotalPositions</h2>
                            <a href="/Positions/Index" class="stretched-link text-decoration-none small">View details →</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Cuestionarios -->
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="card border-0 shadow-sm rounded-3 h-100 overflow-hidden">
                <div class="card-body p-0">
                    <div class="d-flex h-100">
                        <div class="bg-tq text-white d-flex align-items-center justify-content-center px-4">
                            <i class="bi bi-list-check fs-1"></i>
                        </div>
                        <div class="p-3">
                            <h6 class="text-muted mb-1">Questionnaires</h6>
                            <h2 class="fw-bold mb-0">@Model.TotalQuestionnaires</h2>
                            <a href="/Questionnaires/Index" class="stretched-link text-decoration-none small">View details →</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Ciclos Activos -->
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="card border-0 shadow-sm rounded-3 h-100 overflow-hidden">
                <div class="card-body p-0">
                    <div class="d-flex h-100">
                        <div class="bg-warning text-white d-flex align-items-center justify-content-center px-4">
                            <i class="bi bi-calendar-check fs-1"></i>
                        </div>
                        <div class="p-3">
                            <h6 class="text-muted mb-1">Active Cycles</h6>
                            <h2 class="fw-bold mb-0">@Model.TotalActiveCycles</h2>
                            <a href="/EvaluationCycles/Index" class="stretched-link text-decoration-none small">View details →</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Grupos de Evaluación -->
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="card border-0 shadow-sm rounded-3 h-100 overflow-hidden">
                <div class="card-body p-0">
                    <div class="d-flex h-100">
                        <div class="bg-info text-white d-flex align-items-center justify-content-center px-4">
                            <i class="bi bi-diagram-3 fs-1"></i>
                        </div>
                        <div class="p-3">
                            <h6 class="text-muted mb-1">Evaluation Groups</h6>
                            <h2 class="fw-bold mb-0">@Model.TotalEvaluationGroups</h2>
                            <a href="/EvaluationGroups/Index" class="stretched-link text-decoration-none small">View details →</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Resultados de Evaluación -->
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="card border-0 shadow-sm rounded-3 h-100 overflow-hidden">
                <div class="card-body p-0">
                    <div class="d-flex h-100">
                        <div class="bg-secondary text-white d-flex align-items-center justify-content-center px-4">
                            <i class="bi bi-graph-up fs-1"></i>
                        </div>
                        <div class="p-3">
                            <h6 class="text-muted mb-1">Evaluation Results</h6>
                            <h2 class="fw-bold mb-0">@Model.TotalEvaluationResults</h2>
                            <a href="/EvaluationResults/Index" class="stretched-link text-decoration-none small">View details →</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Asignaciones -->
        <div class="col-md-6 col-lg-4 col-xl-3">
            <div class="card border-0 shadow-sm rounded-3 h-100 overflow-hidden">
                <div class="card-body p-0">
                    <div class="d-flex h-100">
                        <div class="bg-dark text-white d-flex align-items-center justify-content-center px-4">
                            <i class="bi bi-person-plus fs-1"></i>
                        </div>
                        <div class="p-3">
                            <h6 class="text-muted mb-1">Assignments</h6>
                            <h2 class="fw-bold mb-0">@Model.TotalGroupEmployees</h2>
                            <a href="/GroupEmployees/Index" class="stretched-link text-decoration-none small">View details →</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body p-4">
                    <h4 class="mb-4">System Status</h4>
                    <div class="alert alert-info d-flex align-items-center" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <div>
                            Welcome to the TQ performance evaluation system.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-tq {
        background-color: #004b99 !important;
    }
</style>
