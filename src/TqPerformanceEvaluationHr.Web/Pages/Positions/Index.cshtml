@page
@model TqPerformanceEvaluationHr.Web.Pages.Positions.IndexModel
@{
    ViewData["Title"] = "Positions";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="fw-bold text-primary display-5">Positions</h1>
            <p class="text-muted">Manage all available positions in the organization</p>
        </div>
    </div>

    <div class="mb-4">
        <a class="btn btn-primary" asp-page="Create">
            <i class="bi bi-plus-circle me-2"></i>Create New Position
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-primary text-primary">
                    <tr>
                        <th>Name</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Positions)
                {
                    <tr>
                        <td class="align-middle fw-medium">@item.Name</td>
                        <td class="text-end">
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil-square me-1"></i>Edit
                            </a>
                            <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash me-1"></i>Delete
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
            
            @if (!Model.Positions.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>No positions have been added yet. Use the "Create New Position" button to add one.
                </div>
            }
        </div>
    </div>
</div>

<style>
    .text-primary {
        color: #004b99 !important;
    }
    
    .btn-primary {
        background-color: #004b99;
        border-color: #004b99;
    }
    
    .btn-primary:hover {
        background-color: #003366;
        border-color: #003366;
    }
    
    .btn-outline-primary {
        color: #004b99;
        border-color: #004b99;
    }
    
    .btn-outline-primary:hover {
        background-color: #004b99;
        border-color: #004b99;
    }
    
    .table-primary {
        background-color: rgba(0, 75, 153, 0.1);
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(0, 75, 153, 0.05);
    }
</style>
