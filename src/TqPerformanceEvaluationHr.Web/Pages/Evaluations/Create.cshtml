@page
@model TqPerformanceEvaluationHr.Web.Pages.Evaluations.CreateModel
@{
    ViewData["Title"] = "Create Evaluation";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Create New Evaluation</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.EmployeeId" class="control-label">Employee</label>
                            <select asp-for="Input.EmployeeId" class="form-control" asp-items="Model.Employees">
                                <option value="">-- Select Employee --</option>
                            </select>
                            <span asp-validation-for="Input.EmployeeId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.EvaluationCycleId" class="control-label">Evaluation Cycle</label>
                            <select asp-for="Input.EvaluationCycleId" class="form-control" asp-items="Model.EvaluationCycles">
                                <option value="">-- Select Cycle --</option>
                            </select>
                            <span asp-validation-for="Input.EvaluationCycleId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.QuestionnaireId" class="control-label">Questionnaire</label>
                            <select asp-for="Input.QuestionnaireId" class="form-control" asp-items="Model.Questionnaires">
                                <option value="">-- Select Questionnaire --</option>
                            </select>
                            <span asp-validation-for="Input.QuestionnaireId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.EvaluationDate" class="control-label">Evaluation Date</label>
                            <input asp-for="Input.EvaluationDate" class="form-control" type="date" />
                            <span asp-validation-for="Input.EvaluationDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Create</button>
                            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 