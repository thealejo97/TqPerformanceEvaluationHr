@page
@model TqPerformanceEvaluationHr.Web.Pages.Reports.ByPositionModel
@{
    ViewData["Title"] = "Report by Position";
}

<h2 class="mb-4 text-primary">Average score by position</h2>

@if (!Model.ReportData.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle me-2"></i>
        No positions found in the system. Please add positions first.
    </div>
}
else
{
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <i class="bi bi-bar-chart me-1"></i> Score Report
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th>Position</th>
                        <th class="text-center">Average Score</th>
                        <th class="text-center">Evaluated</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ReportData)
                    {
                        <tr>
                            <td>@item.PositionName</td>
                            <td class="text-center">
                                @if (item.EvaluatedCount > 0)
                                {
                                    <span class="badge bg-primary rounded-pill">@item.AverageScore.ToString("0.00")</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary rounded-pill">0.00</span>
                                }
                            </td>
                            <td class="text-center">@item.EvaluatedCount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="alert alert-light border">
        <p class="mb-0"><i class="bi bi-info-circle me-2"></i> <strong>Note:</strong> Positions without evaluations display an average score of 0.00.</p>
    </div>
}
