@page
@model TqPerformanceEvaluationHr.Web.Pages.Reports.ByPositionModel
@{
    ViewData["Title"] = "Reporte por Cargo";
}

<h2 class="mb-4 text-primary">Calificación promedio por cargo</h2>

<table class="table table-striped table-bordered shadow-sm">
    <thead class="table-primary">
        <tr>
            <th>Cargo</th>
            <th>Promedio de Calificación</th>
            <th>Evaluados</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ReportData)
        {
            <tr>
                <td>@item.PositionName</td>
                <td>@item.AverageScore.ToString("0.00")</td>
                <td>@item.EvaluatedCount</td>
            </tr>
        }
    </tbody>
</table>
