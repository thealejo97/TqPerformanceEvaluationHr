@page "{id:int}"
@model TqPerformanceEvaluationHr.Web.Pages.GroupEmployees.DetailsModel
@{
    ViewData["Title"] = "Group Employee Details";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="fw-bold text-tq display-5">Group Employee Details</h1>
            <p class="text-muted">Complete information about the employee assignment</p>
        </div>
    </div>

    <div class="mb-4">
        <a class="btn btn-outline-secondary" asp-page="Index">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
        <a class="btn btn-outline-tq ms-2" asp-page="Edit" asp-route-id="@Model.GroupEmployee.Id">
            <i class="bi bi-pencil-square me-2"></i>Edit
        </a>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-header bg-tq-light py-3">
                    <h5 class="mb-0 text-tq">Employee Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Full Name</dt>
                        <dd class="col-sm-8">@Model.GroupEmployee.Employee.FullName</dd>
                        
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.GroupEmployee.Employee.Email</dd>
                        
                        <dt class="col-sm-4">Position</dt>
                        <dd class="col-sm-8">@Model.GroupEmployee.Employee.Position?.Name</dd>
                    </dl>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card border-0 shadow-sm rounded-3 h-100">
                <div class="card-header bg-tq-light py-3">
                    <h5 class="mb-0 text-tq">Evaluation Group Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Group Name</dt>
                        <dd class="col-sm-8">@Model.GroupEmployee.EvaluationGroup.Name</dd>
                        
                        <dt class="col-sm-4">Cycle Year</dt>
                        <dd class="col-sm-8">@Model.GroupEmployee.EvaluationGroup.EvaluationCycle.Year</dd>
                        
                        <dt class="col-sm-4">Start Date</dt>
                        <dd class="col-sm-8">@Model.GroupEmployee.EvaluationGroup.StartDate.ToString("dd/MM/yyyy")</dd>
                        
                        <dt class="col-sm-4">End Date</dt>
                        <dd class="col-sm-8">@Model.GroupEmployee.EvaluationGroup.EndDate.ToString("dd/MM/yyyy")</dd>
                        
                        <dt class="col-sm-4">Active</dt>
                        <dd class="col-sm-8">
                            @if (Model.GroupEmployee.EvaluationGroup.EvaluationCycle.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-header bg-tq-light py-3">
                    <h5 class="mb-0 text-tq">Related Evaluations</h5>
                </div>
                <div class="card-body">
                    @if (Model.RelatedEvaluations.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Questionnaire</th>
                                        <th>Responses</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var evaluation in Model.RelatedEvaluations)
                                    {
                                        <tr>
                                            <td>@evaluation.EvaluationDate.ToString("dd/MM/yyyy")</td>
                                            <td>@evaluation.Questionnaire.Title</td>
                                            <td>
                                                <span class="badge bg-tq rounded-pill">@evaluation.Responses.Count</span>
                                            </td>
                                            <td>
                                                <a asp-page="/Evaluations/Details" asp-route-id="@evaluation.Id" class="btn btn-sm btn-outline-info">
                                                    <i class="bi bi-eye me-1"></i>View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>No evaluations have been created for this employee in this group.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-tq {
        color: #004b99 !important;
    }
    
    .bg-tq {
        background-color: #004b99 !important;
        color: white;
    }
    
    .bg-tq-light {
        background-color: rgba(0, 75, 153, 0.05);
        border-bottom: none;
    }
    
    .btn-outline-tq {
        color: #004b99;
        border-color: #004b99;
    }
    
    .btn-outline-tq:hover {
        background-color: #004b99;
        border-color: #004b99;
        color: white;
    }
</style> 