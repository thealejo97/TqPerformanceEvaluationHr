@page
@model TqPerformanceEvaluationHr.Web.Pages.GroupEmployees.IndexModel
@{
    ViewData["Title"] = "Employee Group Assignments";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="fw-bold text-tq display-5">Employee Group Assignments</h1>
            <p class="text-muted">Manage employee assignments to evaluation groups</p>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <a asp-page="Create" class="btn btn-tq">
                        <i class="bi bi-plus-circle me-2"></i>New Assignment
                    </a>
                </div>
            </div>

            @if (Model.GroupEmployees.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Employee</th>
                                <th>Position</th>
                                <th>Evaluation Group</th>
                                <th>Cycle</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var assignment in Model.GroupEmployees)
                            {
                                <tr>
                                    <td>@assignment.Employee.FullName</td>
                                    <td>@assignment.Employee.Position.Name</td>
                                    <td>@assignment.EvaluationGroup.Name</td>
                                    <td>@assignment.EvaluationGroup.EvaluationCycle.Year</td>
                                    <td>
                                        <span class="badge bg-success">Active</span>
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-page="./Delete" asp-route-id="@assignment.Id" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-people display-1 text-muted"></i>
                    <h4 class="mt-3">No assignments found</h4>
                    <p class="text-muted">Start by creating a new employee assignment to an evaluation group.</p>
                    <a asp-page="Create" class="btn btn-tq mt-3">
                        <i class="bi bi-plus-circle me-2"></i>Create Assignment
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .text-tq {
        color: #004b99 !important;
    }
    
    .btn-tq {
        background-color: #004b99;
        border-color: #004b99;
        color: white;
    }
    
    .btn-tq:hover {
        background-color: #003366;
        border-color: #003366;
        color: white;
    }
    
    .form-control:focus, .form-select:focus {
        border-color: #004b99;
        box-shadow: 0 0 0 0.25rem rgba(0, 75, 153, 0.25);
    }
</style> 