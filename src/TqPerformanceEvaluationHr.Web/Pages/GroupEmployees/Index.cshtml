@page
@model TqPerformanceEvaluationHr.Web.Pages.GroupEmployees.IndexModel
@{
    ViewData["Title"] = "Group Employees";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="fw-bold text-tq display-5">Group Employees</h1>
            <p class="text-muted">Manage employee assignments to evaluation groups</p>
        </div>
    </div>

    <div class="mb-4">
        <a class="btn btn-tq" asp-page="Create">
            <i class="bi bi-plus-circle me-2"></i>Assign Employee to Group
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-tq text-tq">
                    <tr>
                        <th>Employee</th>
                        <th>Position</th>
                        <th>Group</th>
                        <th>Cycle</th>
                        <th>Period</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.GroupEmployees)
                    {
                        <tr>
                            <td class="align-middle">@item.Employee.FullName</td>
                            <td class="align-middle">@item.Employee.Position?.Name</td>
                            <td class="align-middle">@item.EvaluationGroup.Name</td>
                            <td class="align-middle">@item.EvaluationGroup.EvaluationCycle.Year</td>
                            <td class="align-middle">
                                @item.EvaluationGroup.StartDate.ToString("dd/MM/yyyy") - @item.EvaluationGroup.EndDate.ToString("dd/MM/yyyy")
                            </td>
                            <td class="text-end">
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-tq">
                                    <i class="bi bi-pencil-square me-1"></i>Edit
                                </a>
                                <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-eye me-1"></i>Details
                                </a>
                                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash me-1"></i>Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
            @if (!Model.GroupEmployees.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>No employees have been assigned to evaluation groups yet. Use the "Assign Employee to Group" button to add one.
                </div>
            }
        </div>
    </div>
</div>

<style>
    .text-tq {
        color: #004b99 !important;
    }
    
    .btn-tq {
        background-color: #004b99;
        border-color: #004b99;
        color: white;
    }
    
    .btn-tq:hover {
        background-color: #003366;
        border-color: #003366;
        color: white;
    }
    
    .btn-outline-tq {
        color: #004b99;
        border-color: #004b99;
    }
    
    .btn-outline-tq:hover {
        background-color: #004b99;
        border-color: #004b99;
        color: white;
    }
    
    .table-tq {
        background-color: rgba(0, 75, 153, 0.1);
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(0, 75, 153, 0.05);
    }
</style> 