@page
@model TqPerformanceEvaluationHr.Web.Pages.GroupEmployees.CreateModel
@{
    ViewData["Title"] = "Assign Employee to Group";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Assign Employee to Group</h4>
                </div>
                <div class="card-body">
                    <form method="post" id="createForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Input.EvaluationGroupId" class="form-label">Evaluation Group</label>
                            <select asp-for="Input.EvaluationGroupId" class="form-select" asp-items="Model.EvaluationGroups" required>
                                <option value="">-- Select a group --</option>
                            </select>
                            <span asp-validation-for="Input.EvaluationGroupId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.EmployeeId" class="form-label">Employee</label>
                            <select asp-for="Input.EmployeeId" class="form-select" asp-items="Model.Employees" required>
                                <option value="">-- Select an employee --</option>
                            </select>
                            <span asp-validation-for="Input.EmployeeId" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary" id="submitButton">Assign</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        $(document).ready(function() {
            // Prevent multiple form submissions
            $('#createForm').on('submit', function() {
                var $submitButton = $('#submitButton');
                if ($submitButton.prop('disabled')) {
                    return false;
                }
                $submitButton.prop('disabled', true);
                $submitButton.html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Processing...');
                return true;
            });

            // Real-time validation for selects
            $('select').on('change', function() {
                if ($(this).val()) {
                    $(this).removeClass('is-invalid').addClass('is-valid');
                } else {
                    $(this).removeClass('is-valid').addClass('is-invalid');
                }
            });
        });
    </script>
} 