@page
@model TqPerformanceEvaluationHr.Web.Pages.GroupEmployees.DeleteModel
@{
    ViewData["Title"] = "Delete Assignment";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Assignment</h4>
                </div>
                <div class="card-body">
                    <h5 class="text-danger">Are you sure you want to delete this assignment?</h5>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Employee</dt>
                        <dd class="col-sm-9">@Model.GroupEmployee.Employee.FullName</dd>

                        <dt class="col-sm-3">Position</dt>
                        <dd class="col-sm-9">@Model.GroupEmployee.Employee.Position.Name</dd>

                        <dt class="col-sm-3">Evaluation Group</dt>
                        <dd class="col-sm-9">@Model.GroupEmployee.EvaluationGroup.Name</dd>

                        <dt class="col-sm-3">Cycle</dt>
                        <dd class="col-sm-9">@Model.GroupEmployee.EvaluationGroup.EvaluationCycle.Year</dd>
                    </dl>

                    <form method="post">
                        <input type="hidden" asp-for="GroupEmployee.Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-tq {
        color: #004b99 !important;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#deleteForm').submit(function() {
                if (!$('button[type="submit"]').prop('disabled')) {
                    $(this).find('button[type="submit"]').prop('disabled', true);
                    $(this).find('button[type="submit"]').html('<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>Deleting...');
                }
                return true;
            });
        });
    </script>
} 