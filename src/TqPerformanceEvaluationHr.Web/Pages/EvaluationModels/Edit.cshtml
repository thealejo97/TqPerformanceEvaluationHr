@page "{id:int}"
@model TqPerformanceEvaluationHr.Web.Pages.EvaluationModels.EditModel
@{
    ViewData["Title"] = "Editar Modelo de Evaluación";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="fw-bold text-tq display-5">Editar Modelo de Evaluación</h1>
            <p class="text-muted">Actualiza la información del modelo de evaluación seleccionado</p>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body p-4">
            <form method="post">
                <input type="hidden" asp-for="EvaluationModel.Id" />
                
                <div class="mb-4">
                    <label asp-for="EvaluationModel.Name" class="form-label fw-medium">Nombre</label>
                    <input asp-for="EvaluationModel.Name" class="form-control" placeholder="Ingrese el nombre del modelo" />
                    <span asp-validation-for="EvaluationModel.Name" class="text-danger"></span>
                </div>
                
                <div class="mb-4">
                    <label asp-for="EvaluationModel.Description" class="form-label fw-medium">Descripción</label>
                    <textarea asp-for="EvaluationModel.Description" class="form-control" rows="4" placeholder="Ingrese una descripción detallada del modelo de evaluación"></textarea>
                    <span asp-validation-for="EvaluationModel.Description" class="text-danger"></span>
                </div>
                
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <a asp-page="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle me-2"></i>Cancelar
                    </a>
                    <button type="submit" class="btn btn-tq">
                        <i class="bi bi-check-circle me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .text-tq {
        color: #004b99 !important;
    }
    
    .btn-tq {
        background-color: #004b99;
        border-color: #004b99;
        color: white;
    }
    
    .btn-tq:hover {
        background-color: #003366;
        border-color: #003366;
        color: white;
    }
    
    .form-control:focus {
        border-color: #004b99;
        box-shadow: 0 0 0 0.25rem rgba(0, 75, 153, 0.25);
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
