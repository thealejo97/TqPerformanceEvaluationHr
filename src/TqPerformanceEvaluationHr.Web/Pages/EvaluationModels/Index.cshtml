@page
@model TqPerformanceEvaluationHr.Web.Pages.EvaluationModels.IndexModel
@{
    ViewData["Title"] = "Evaluation Models";
}

<h1>Evaluation Models</h1>

<p>
    <a class="btn btn-primary" asp-page="Create">Create new</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EvaluationModels)
{
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
