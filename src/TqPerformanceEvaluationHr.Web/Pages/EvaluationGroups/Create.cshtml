@page
@model TqPerformanceEvaluationHr.Web.Pages.EvaluationGroups.CreateModel
@{
    ViewData["Title"] = "Create Evaluation Group";
}

<div class="container">
    <h2 class="mb-4 text-tq-blue">Create Evaluation Group</h2>

    <div class="card shadow mb-4">
        <div class="card-body">
            <form id="createGroupForm" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Input.Name" class="form-label"></label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="Input.EvaluationCycleId" class="form-label"></label>
                        <select asp-for="Input.EvaluationCycleId" asp-items="Model.EvaluationCycles" class="form-select">
                            <option value="">-- Select a cycle --</option>
                        </select>
                        <span asp-validation-for="Input.EvaluationCycleId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Input.StartDate" class="form-label"></label>
                        <input asp-for="Input.StartDate" class="form-control" type="date" />
                        <span asp-validation-for="Input.StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Input.EndDate" class="form-label"></label>
                        <input asp-for="Input.EndDate" class="form-control" type="date" />
                        <span asp-validation-for="Input.EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-page="./Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                    <button id="submitButton" type="submit" class="btn btn-tq-blue">
                        <i class="fas fa-save"></i> Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .btn-tq-blue {
        background-color: #005f9e;
        color: white;
    }

    .btn-tq-blue:hover {
        background-color: #004a7c;
        color: white;
    }

    .text-tq-blue {
        color: #005f9e;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            // Prevent multiple form submissions
            $('#createGroupForm').on('submit', function () {
                $('#submitButton').prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Saving...');
            });

            // Additional validation when cycle changes
            $('#Input_EvaluationCycleId').change(function () {
                if ($(this).val()) {
                    $(this).removeClass('is-invalid').addClass('is-valid');
                } else {
                    $(this).removeClass('is-valid').addClass('is-invalid');
                }
            });
        });
    </script>
} 