@page
@model TqPerformanceEvaluationHr.Web.Pages.EvaluationGroups.IndexModel
@{
    ViewData["Title"] = "Evaluation Groups";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="fw-bold text-tq display-5">Evaluation Groups</h1>
            <p class="text-muted">Manage evaluation groups for different evaluation cycles</p>
        </div>
    </div>

    <div class="mb-4">
        <a class="btn btn-tq" asp-page="Create">
            <i class="bi bi-plus-circle me-2"></i>Create New Group
        </a>
    </div>

    <div class="card border-0 shadow-sm rounded-3">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead class="table-tq text-tq">
                    <tr>
                        <th>Group Name</th>
                        <th>Cycle Year</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Members</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.EvaluationGroups)
                    {
                        <tr>
                            <td class="align-middle fw-medium">@item.Name</td>
                            <td class="align-middle">@item.EvaluationCycle.Year</td>
                            <td class="align-middle">@item.StartDate.ToString("dd/MM/yyyy")</td>
                            <td class="align-middle">@item.EndDate.ToString("dd/MM/yyyy")</td>
                            <td class="align-middle">
                                <span class="badge bg-tq rounded-pill">@item.GroupEmployees.Count</span>
                            </td>
                            <td class="align-middle">
                                @if (item.EvaluationCycle.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-tq">
                                    <i class="bi bi-pencil-square me-1"></i>Edit
                                </a>
                                <a asp-page="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                    <i class="bi bi-eye me-1"></i>Details
                                </a>
                                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash me-1"></i>Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            
            @if (!Model.EvaluationGroups.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle me-2"></i>No evaluation groups have been created yet. Use the "Create New Group" button to add one.
                </div>
            }
        </div>
    </div>
</div>

<style>
    .text-tq {
        color: #004b99 !important;
    }
    
    .btn-tq {
        background-color: #004b99;
        border-color: #004b99;
        color: white;
    }
    
    .btn-tq:hover {
        background-color: #003366;
        border-color: #003366;
        color: white;
    }
    
    .btn-outline-tq {
        color: #004b99;
        border-color: #004b99;
    }
    
    .btn-outline-tq:hover {
        background-color: #004b99;
        border-color: #004b99;
        color: white;
    }
    
    .table-tq {
        background-color: rgba(0, 75, 153, 0.1);
    }
    
    .bg-tq {
        background-color: #004b99 !important;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(0, 75, 153, 0.05);
    }
</style> 