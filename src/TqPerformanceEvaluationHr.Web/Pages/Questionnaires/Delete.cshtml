@page "{id:int}"
@model TqPerformanceEvaluationHr.Web.Pages.Questionnaires.DeleteModel
@{
    ViewData["Title"] = "Delete Questionnaire";
}

<h1>Delete Questionnaire</h1>

<div class="alert alert-danger">
    <h4><i class="bi bi-exclamation-triangle me-2"></i>Are you sure you want to delete this questionnaire?</h4>
    <p>This action cannot be undone and will delete all associated questions.</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">@Model.Questionnaire.Title</h5>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="text-muted small">Evaluation Model</div>
                                <div class="fw-bold">@Model.Questionnaire.EvaluationModel.Name</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <div class="text-muted small">Position</div>
                                <div class="fw-bold">@Model.Questionnaire.Position.Name</div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <h5 class="card-title mb-3">Questions to be deleted: @Model.Questionnaire.Questions.Count</h5>
                
                @if (Model.Questionnaire.Questions.Any())
                {
                    <div class="list-group mb-4">
                        @foreach (var question in Model.Questionnaire.Questions.Take(5))
                        {
                            <div class="list-group-item">
                                <p class="mb-0">@question.Text</p>
                            </div>
                        }
                        
                        @if (Model.Questionnaire.Questions.Count > 5)
                        {
                            <div class="list-group-item text-center text-muted">
                                <small>And @(Model.Questionnaire.Questions.Count - 5) more questions...</small>
                            </div>
                        }
                    </div>
                }
                
                <form method="post">
                    <input type="hidden" asp-for="Questionnaire.Id" />
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 