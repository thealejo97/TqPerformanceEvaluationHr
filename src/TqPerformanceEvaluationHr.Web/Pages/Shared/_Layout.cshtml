<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TQ Evaluación</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar-custom {
            background-color: #004b99;
        }

        .navbar-custom .navbar-brand,
        .navbar-custom .nav-link,
        .navbar-custom .navbar-text {
            color: white;
        }

        .navbar-custom .nav-link.active {
            font-weight: bold;
            text-decoration: underline;
        }

        .footer-custom {
            background-color: #e9ecef;
            color: #6c757d;
        }

        .footer-custom a {
            color: #004b99;
            text-decoration: none;
        }

        .footer-custom a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-custom shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-page="/Index">TQ Evaluación</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/EvaluationModels/Index">Modelos Evaluativos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-page="/Reports/ByPosition">Reporte por Cargo</a>
                    </li>
                </ul>
                <span class="navbar-text">
                    @DateTime.Now.ToString("MMMM yyyy")
                </span>
            </div>
        </div>
    </nav>

    <!-- MAIN CONTENT -->
    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="footer-custom text-center py-3 border-top mt-auto">
        <div class="container">
            &copy; 2025 - TQ Evaluación de Desempeño |
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
