<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TQ Evaluación</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand" asp-page="/Index">TQ Evaluación</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-page="/EvaluationModels/Index">Modelos Evaluativos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/EvaluationModels/Index">Modelos</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Employees/Index">Empleados</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Evaluations/Index">Evaluaciones</a>
                    </li>
                </ul>
                <span class="navbar-text text-white">
                    @DateTime.Now.ToString("MMMM yyyy")
                </span>
            </div>
        </div>
    </nav>

    <div class="container my-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light text-center text-lg-start mt-auto border-top py-3">
        <div class="text-center text-muted container">
            &copy; 2025 - TQ Evaluación de Desempeño
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
